<div id="page">
	<h1>Sign Up</h1>
	<%=form_for User.new do |f| %>
		<%=f.label :username %>
		<%=f.text_field :username %>
		<%=f.label :password %>
		<%=f.password_field :password %>
		<%=f.label :password_confirmation %>
		<%=f.password_field :password_confirmation %>
		<%=f.file_field :avatar %>
		<%=f.submit "Sign Up" %>
	<%end%>
</div>