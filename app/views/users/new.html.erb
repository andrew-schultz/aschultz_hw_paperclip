<div id="page">
	<div id="sign_up">
		<h1>Sign Up</h1>
		<%=form_for User.new do |f| %>
			<%=f.label :username %>
			<%=f.text_field :username %>
			<br>
			<br>
			<%=f.label :password %>
			<%=f.password_field :password %>
			<br>
			<br>
			<%=f.label :password_confirmation %>
			<%=f.password_field :password_confirmation %>
			<br>
			<br>
			<%=f.label :avatar %>
			<%=f.file_field :avatar %>
			<br>
			<br>
			<%=f.submit "Sign Up" %>
		<%end%>
	</div>
</div>