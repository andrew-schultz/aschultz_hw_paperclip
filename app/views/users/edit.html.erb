<div id="page">
	<h1>Edit</h1>
	<%=form_for @user, :url => user_path, :html => { :multipart => true } do |f| %>
		<%=f.label :username %>
		<%=f.text_field :username %>
		<%=f.label :password %>
		<%=f.password_field :password %>
		<%=f.label :password_confirmation %>
		<%=f.password_field :password_confirmation %>
		<%=f.label :bio %>
		<%=f.text_area :bio %>
		<%=f.file_field :avatar %>
		<%=f.submit "Submit" %>
	<%end%>
</div>